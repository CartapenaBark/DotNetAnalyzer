<Project Sdk="Microsoft.NET.Sdk">

  <ItemGroup>
    <ProjectReference Include="..\DotNetAnalyzer.Core\DotNetAnalyzer.Core.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- .NET Global Tool 配置 -->
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>dotnet-analyzer</ToolCommandName>
    <PackageId>DotNetAnalyzer</PackageId>
    <Version>0.1.0-alpha</Version>
    <Authors>Your Name</Authors>
    <Description>MCP server for .NET code analysis with Roslyn</Description>
    <PackageTags>mcp;roslyn;code-analysis;claude;dotnet</PackageTags>
    <PackageProjectUrl>https://github.com/yourusername/DotNetAnalyzer</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yourusername/DotNetAnalyzer</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>
      Initial alpha release with MCP server foundation
      - Core MCP protocol implementation (stdio transport)
      - Roslyn integration with MSBuildWorkspace
      - Tools: get_diagnostics
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="10.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- 包含 README.md 作为包说明文件 -->
    <None Include="../../README.md" Pack="true" PackagePath="\" Visible="false" />
  </ItemGroup>

</Project>
